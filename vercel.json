{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build && cd ../backend && npm install && npx prisma generate",
  "outputDirectory": "frontend/dist",
  "installCommand": "echo 'Custom build'",
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    }
  ]
}
