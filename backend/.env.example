PORT=5000
JWT_SECRET=tu_secreto_super_seguro_cambiar_en_produccion
NODE_ENV=development

# FRONTEND URL (para CORS)
# En desarrollo: http://localhost:3001
# En producción: tu dominio real (ej: https://rv-automoviles.com)
FRONTEND_URL=http://localhost:3001

# NEON DATABASE CONFIGURATION
# Obtén tus connection strings desde: https://console.neon.tech
# 1. Crea una cuenta en Neon.tech
# 2. Crea un nuevo proyecto
# 3. Neon te proporcionará automáticamente estas variables
# 4. Cópialas aquí o agrégalas directamente en Vercel
# 
# POSTGRES_PRISMA_URL: Para conexiones pooled (recomendado para Prisma)
# DATABASE_URL_UNPOOLED: Para conexiones directas (migraciones)
POSTGRES_PRISMA_URL="postgresql://usuario:password@ep-xxxxx-xxxxx.us-east-2.aws.neon.tech/neondb?sslmode=require&pgbouncer=true"
DATABASE_URL_UNPOOLED="postgresql://usuario:password@ep-xxxxx-xxxxx.us-east-2.aws.neon.tech/neondb?sslmode=require"
